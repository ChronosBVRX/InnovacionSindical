      { area: "Comisiones", cartera: "1er. Secretario de Acción Política", nombre: "", foto: "", categoria: "", unidad: "", desc: "Asistir en la planeación y vinculación con autoridades en los distintos niveles de gobierno." },
      { area: "Comisiones", cartera: "2do. Secretario de Acción Política", nombre: "", foto: "", categoria: "", unidad: "", desc: "Colaborar en las campañas de concientización y en las actividades político-electorales del Sindicato." }
    ];

    const $results = document.getElementById('results');

    function render(list) {
      $results.innerHTML = '';
      
      let currentArea = '';

      for (const item of list) {
        // Insertar encabezado si cambiamos de área (Secretarías vs Comisiones)
        if (item.area !== currentArea) {
          const header = document.createElement('div');
          header.className = 'section-title';
          header.textContent = item.area;
          $results.appendChild(header);
          currentArea = item.area;
        }

        const displayName = item.nombre.trim() !== "" ? item.nombre : "Por designar";
        const isVacant = item.nombre.trim() === "";
        const displayCat = item.categoria.trim() !== "" ? item.categoria : "Categoría pendiente";
        const displayUnit = item.unidad.trim() !== "" ? item.unidad : "Unidad pendiente";
        const photoHtml = item.foto.trim() !== "" 
          ? `<img src="${item.foto}" alt="Foto de ${displayName}">` 
          : `<i class="ph-duotone ph-user"></i>`;

        const card = document.createElement('article');
        card.className = 'card';
        
        card.innerHTML = `
          <div class="tag-area">${item.area}</div>
          <div class="card-photo">${photoHtml}</div>
          <div class="card-role">${item.cartera}</div>
          <div class="card-name ${isVacant ? 'vacant-text' : ''}">${displayName}</div>
          
          <div class="card-details">
            <span><i class="ph-bold ph-identification-badge"></i> ${displayCat}</span>
            <span><i class="ph-bold ph-hospital"></i> ${displayUnit}</span>
          </div>

          <i class="ph-bold ph-caret-down expand-icon"></i>

          <div class="card-description">
            <strong>Acerca de la Cartera:</strong><br>
            ${item.desc}
          </div>
        `;

        card.addEventListener('click', () => {
          card.classList.toggle('active');
        });

        $results.appendChild(card);
      }
    }

    render(DATA);
  </script>
